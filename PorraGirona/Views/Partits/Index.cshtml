@model IEnumerable<PorraGirona.Models.Entity.Partit>

@{
    ViewData["Title"] = "Partits";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Estils Partits */
    body {
        background-image: url("images/partits.jpg");
        background-color: #EA6878;
        background-position: right;
        background-repeat: no-repeat;
        background-size: cover;
        background-blend-mode: luminosity;
    }

    h1 {
        color: white;
    }

    .table {
        color: white;
        width: 200px;
        margin-top: 20px;
        margin-bottom: 0px;
        margin-left: 50%;
        transform: translateX(-50%);
        font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif;
    }

    .bg-taula {
        margin: 5px auto;
        width: fit-content;
        min-width: fit-content;
        padding: 20px 20px 30px;
        border: 5px solid black;
        border-radius: 30px;
        background-color: #E91C35;
    }
    
    a {
        color: white;
    }

    a:hover {
        color: black;
        border: 1px solid black;
    }

</style>

<h1>Partits</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div class="bg-taula">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Datainici)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Jornada)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Golslocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Golsvisitant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Finalitzat)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Temporada)
                </th>
                <!--
                
                <th>
                    @Html.DisplayNameFor(model => model.Idsjugadorslocal)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Idsjugadorsvisitant)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdequiplocalNavigation)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdequipvisitantNavigation)
                </th>
                -->
                <th></th>
            </tr>
        </thead>
        <tbody>
    @foreach (var item in Model) {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Datainici)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Jornada)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Golslocal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Golsvisitant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Finalitzat)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Temporada)
                </td>
                <!--
                <td>
                    @Html.DisplayFor(modelItem => item.Idsjugadorslocal)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Idsjugadorsvisitant)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdequiplocalNavigation.Idequip)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IdequipvisitantNavigation.Idequip)
                </td>
                -->
            <td>
                <a asp-action="Edit" asp-route-id="@item.Idpartit">Edit</a>
                <!--
                    |
                    <a asp-action="Details" asp-route-id="@item.Idpartit">Details</a>-->
                <a asp-action="Delete" asp-route-id="@item.Idpartit">Delete</a>

            </td>
            </tr>
    }
        </tbody>
    </table>
</div>