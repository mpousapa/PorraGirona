@model IEnumerable<PorraGirona.Models.Entity.Puntuacion>

@{
    ViewData["Title"] = "Puntuacions";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<h1>Puntuacions</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Alias)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Puntuacio)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    <a asp-controller="PronPorres" asp-action="Index" asp-route-id="@item.Idpenyista">@Html.DisplayFor(modelItem => item.Alias)</a>
                    
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Puntuacio)
                </td>
            </tr>
        }
    </tbody>
</table>

