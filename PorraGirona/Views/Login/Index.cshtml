@model PorraGirona.Models.LoginModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    /* Estils al Login*/
    body {
        background-image: url("images/loginImage.jpg");
        background-color: #EA6878;
        height: 500px;
        background-position: center;
        background-repeat: no-repeat;
        background-size: cover;
        background-blend-mode: luminosity;
    }

    h2 {
        color: white;
    }

    #bg-formulari {
        margin: 100px auto;
        width: fit-content;
        min-width: fit-content;
        padding: 20px 20px 30px;
        border: 5px solid black;
        border-radius: 30px;
        background-color: #E91C35;
    }

    .etiqueta {
        color: white;
        margin-bottom: 10px;
    }

    .dreta {
        float: right;
        margin-left: 10px;
    }

    .centrar {
        margin-top: 20px;
        width: max-content;
        margin-left: 50%;
        transform: translateX(-50%);
    }

    .boto {
        height: 40px;
        width: 100px;
        font-size: 20px;
    }

    .boto:hover {
        border: 2px solid black;
        background-color: #EA6878;
        color: white;
    }

</style>

<div id="bg-formulari">
    <h2>Login</h2>
    @ViewBag.error

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="etiqueta">
            @Html.LabelFor(model => model.Alias)
            <div class="dreta">
                @Html.EditorFor(model => model.Alias)
            </div> 
        </div>
        <div class="etiqueta">
            @Html.LabelFor(model => model.Password)
            <div class="dreta">
                @Html.EditorFor(model => model.Password)
            </div>
        </div>

        <div class="centrar">
            <input class="boto" type="submit" value="Entrar" />
        </div>

    }

</div>
